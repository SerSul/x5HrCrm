<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="011-add-test-id-to-directions" author="laplas7">
        <comment>Одно направление -> один тест, тест общий для множества направлений</comment>

        <addColumn tableName="directions">
            <column name="test_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <addForeignKeyConstraint
                baseTableName="directions"
                baseColumnNames="test_id"
                constraintName="fk_directions_test"
                referencedTableName="tests"
                referencedColumnNames="id"
                onDelete="SET NULL"/>
    </changeSet>

</databaseChangeLog>
