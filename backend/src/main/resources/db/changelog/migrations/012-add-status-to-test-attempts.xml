<!--liquibase formatted file: 012-add-status-to-test-attempts.xml-->
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="012-add-status-to-test-attempts" author="laplas7">
        <comment>Добавляем статус попытки теста</comment>

        <addColumn tableName="test_attempts">
            <column name="status" type="VARCHAR(20)" defaultValue="CREATED">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="add-close-reason-to-applications" author="laplas7">
        <addColumn tableName="applications">
            <column name="close_reason" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <createIndex tableName="applications" indexName="idx_applications_close_reason">
            <column name="close_reason"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
