<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="create-directions-table" author="laplas7">
        <comment>Создание таблицы directions для направлений рекрутинга</comment>

        <createTable tableName="directions">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="title" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>

            <column name="description" type="TEXT">
                <constraints nullable="true"/>
            </column>

            <column name="employment_type" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>

            <column name="salary_min" type="INT">
                <constraints nullable="true"/>
            </column>

            <column name="salary_max" type="INT">
                <constraints nullable="true"/>
            </column>

            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="closed_at" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>

            <column name="deleted_at" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <createIndex tableName="directions" indexName="idx_directions_is_active">
            <column name="is_active"/>
        </createIndex>
    </changeSet>

    <changeSet id="create-direction-statuses-table" author="laplas7">
        <comment>Создание таблицы direction_statuses для связи направлений со статусами</comment>

        <createTable tableName="direction_statuses">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="direction_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="description" type="TEXT">
                <constraints nullable="true"/>
            </column>

            <column name="sequence_order" type="INT">
                <constraints nullable="false"/>
            </column>

            <column name="is_mandatory" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="direction_statuses"
                baseColumnNames="direction_id"
                constraintName="fk_direction_statuses_direction"
                referencedTableName="directions"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <addUniqueConstraint
                tableName="direction_statuses"
                columnNames="direction_id, title"
                constraintName="uk_direction_statuses_direction_title"/>

        <createIndex tableName="direction_statuses" indexName="idx_direction_statuses_direction_id">
            <column name="direction_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="create-applications-table" author="laplas7">
        <comment>Создание таблицы applications для откликов кандидатов на направления</comment>

        <createTable tableName="applications">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="direction_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="current_direction_status_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="applied_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="true"/>
            </column>

            <column name="closed_at" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>

            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>

            <column name="recruiter_notes" type="TEXT">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="applications"
                baseColumnNames="user_id"
                constraintName="fk_applications_user"
                referencedTableName="users"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="applications"
                baseColumnNames="direction_id"
                constraintName="fk_applications_direction"
                referencedTableName="directions"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="applications"
                baseColumnNames="current_direction_status_id"
                constraintName="fk_applications_current_status"
                referencedTableName="direction_statuses"
                referencedColumnNames="id"/>

        <addUniqueConstraint
                tableName="applications"
                columnNames="user_id, direction_id"
                constraintName="uk_applications_user_direction"/>

        <createIndex tableName="applications" indexName="idx_applications_user_id">
            <column name="user_id"/>
        </createIndex>

        <createIndex tableName="applications" indexName="idx_applications_direction_id">
            <column name="direction_id"/>
        </createIndex>

        <createIndex tableName="applications" indexName="idx_applications_current_status">
            <column name="current_direction_status_id"/>
        </createIndex>

        <createIndex tableName="applications" indexName="idx_applications_is_active">
            <column name="is_active"/>
        </createIndex>
    </changeSet>

    <changeSet id="create-application-status-history-table" author="laplas7">
        <comment>Создание таблицы application_status_history для истории изменений статусов откликов</comment>

        <createTable tableName="application_status_history">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="application_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="direction_status_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="changed_by_user_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>

            <column name="changed_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="comment" type="TEXT">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="application_status_history"
                baseColumnNames="application_id"
                constraintName="fk_app_status_history_application"
                referencedTableName="applications"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="application_status_history"
                baseColumnNames="direction_status_id"
                constraintName="fk_app_status_history_direction_status"
                referencedTableName="direction_statuses"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                baseTableName="application_status_history"
                baseColumnNames="changed_by_user_id"
                constraintName="fk_app_status_history_changed_by"
                referencedTableName="users"
                referencedColumnNames="id"
                onDelete="SET NULL"/>

        <createIndex tableName="application_status_history" indexName="idx_app_status_history_application_id">
            <column name="application_id"/>
        </createIndex>

        <createIndex tableName="application_status_history" indexName="idx_app_status_history_changed_at">
            <column name="changed_at"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
